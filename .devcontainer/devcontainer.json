{
    "build": {
        "dockerfile": "dev.dockerfile"
    },
    // Makes it straightforward to access peripherals
    "privileged": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "rust-analyzer.cargo.features": [
                    "production"
                ]
            }
        }
    },
    "hostRequirements": {
        "gpu": true
    }
}